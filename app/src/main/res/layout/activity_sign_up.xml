<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liam.studybuddy.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="@string/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:id="@+id/firstNameET"
                android:hint="eg; John"
                android:textAlignment="center"
                android:singleLine="false"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/firstNameET"
                android:layout_alignLeft="@+id/firstNameET"
                android:layout_alignStart="@+id/firstNameET"
                android:id="@+id/lastNameET"
                android:hint="eg: Doe"
                android:textAlignment="center"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/studentNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/lastNameET"
                android:layout_alignLeft="@+id/lastNameET"
                android:layout_alignStart="@+id/lastNameET"
                android:id="@+id/studentNumET"
                android:hint="eg; x12345678"
                android:textAlignment="center"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_below="@+id/firstNameET"
                android:layout_alignLeft="@+id/firstNameET"
                android:layout_alignStart="@+id/firstNameET"
                android:id="@+id/emailET"
                android:textAlignment="center"
                android:hint="eg; johndoe@example.com"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/repeatEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_below="@+id/emailET"
                android:layout_alignLeft="@+id/emailET"
                android:layout_alignStart="@+id/emailET"
                android:id="@+id/repeatEmailET"
                android:textAlignment="center"
                android:hint="eg; johndoe@example.com"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/repeatEmailET"
                android:layout_alignRight="@+id/repeatEmailET"
                android:layout_alignEnd="@+id/repeatEmailET"
                android:id="@+id/passwordET"
                android:textAlignment="center"
                android:hint="eg; Password1"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="@string/repeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAlignment="center"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/passwordET"
                android:layout_alignRight="@+id/passwordET"
                android:layout_alignEnd="@+id/passwordET"
                android:id="@+id/repeatPasswordET"
                android:textAlignment="center"
                android:hint="eg; Password1" />

            <Button
                android:text="@string/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repeatPasswordET"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:id="@+id/signupBTN"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
