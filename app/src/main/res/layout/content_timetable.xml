<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liam.studybuddy.Timetable"
    android:layout_marginTop="45dp">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/backBTN" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:id="@+id/bodyLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/headingLayout"
            >

            <TextView
                android:text="@string/TT_heading"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:id="@+id/headingTV"
                android:layout_weight="0.37"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/room_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.37"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TT_spinner"
            android:entries="@array/TT_spinner_array"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TT_day"
            android:entries="@array/day_spinner_array"
            />


        <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/timeTableLayout"
            style="@style/timetable_style"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/top_row"
                android:layout_width="match_parent">


                <TextView
                    android:text="@string/time_TT"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_tv"
                    android:background="@drawable/back"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:paddingRight="80dp"
                    />

                <TextView
                    android:text="@string/class_TT"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_tv"
                    android:background="@drawable/back"
                    android:textStyle="normal|bold"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:paddingRight="100dp"
                    />

            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/second_row"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/row_01"
                android:text="@string/monday">

                <TextView
                    android:text="@string/timeSlot1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time1"
                    android:background="@drawable/back"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />

                <!-- <TextView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAlignment="center"
                     android:textSize="12sp"
                     android:id="@+id/day_tv_1" />-->

                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_1"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />

            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_02"
                android:layout_width="match_parent">

                <TextView
                    android:text="@string/timeSlot2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time2"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />

                <!-- <TextView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAlignment="center"
                     android:textSize="12sp"
                     android:id="@+id/day_tv_2" />-->

                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_2"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_03"
                android:layout_width="match_parent">

                <TextView
                    android:text="@string/timeSlot3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time3"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />


                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_3"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_04"
                android:layout_width="match_parent">

                <TextView
                    android:text="@string/timeSlot4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time4"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_4"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_05"
                android:layout_width="match_parent">

                <TextView
                    android:text="@string/timeSlot5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time5"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_5"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_06"
                android:layout_width="match_parent">

                <TextView
                    android:text="@string/timeSlot6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time6"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />


                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_6"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:id="@+id/row_07">

                <TextView
                    android:text="@string/timeSlot7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time7"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />


                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_7"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="322dp"
                android:layout_height="match_parent"
                android:id="@+id/row_08">

                <TextView
                    android:text="@string/timeSlot8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time8"
                    android:textSize="12sp"
                    android:background="@drawable/back"
                    android:paddingLeft="10dp"

                    />


                <TextView
                    android:text="@string/class_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:id="@+id/class_tv_8"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    />
            </TableRow>
        </TableLayout>

        <Button
            android:text="@string/examBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/examBTN"
            android:textSize="10dp"
            />
    </LinearLayout>
</RelativeLayout>
