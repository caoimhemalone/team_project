<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liam.studybuddy.SchoolBusLinks"
    android:layout_marginTop="45dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/LL_VER_HEADER">

        <TextView
            android:text="@string/bus_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ss_text_view"
            android:textAlignment="center"
            android:textSize="30sp"
            android:autoLink="all"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SSTV"
            android:text="@string/bus_subheading"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:paddingBottom="20dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:text="@string/MP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busBTN1"
                android:textSize="15sp"
                android:background="#F4F5EB"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FF4081"/>

            <Button
                android:text="@string/HRM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busBTN2"
                android:textSize="15sp"
                android:background="#F4F5EB"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FF4081"/>

            <Button
                android:text="@string/BUS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busBTN3"
                android:textSize="15sp"
                android:background="#F4F5EB"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FF4081"/>

            <Button
                android:text="@string/AF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/busBTN4"
                android:textSize="15sp"
                android:background="#F4F5EB"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FF4081"/>

            <Button
                android:text="@string/back_school"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/backBTNschool"
                android:background="#F4F5EB"
                android:layout_marginBottom="20dp"
                android:textSize="10sp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>