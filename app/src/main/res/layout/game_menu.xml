<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/txtV_bottleSpin_header">

    <TextView
        android:text="Break room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtV_header" />

    <TextView
        android:text="Test What you've learned with spin the bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_header"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="36dp"
        android:textSize="15dp"
        android:id="@+id/txtV_bottleHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Play a friend in X's and O's"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtV_xAndOHeader"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Bottle Spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_bottleSpin"
        android:layout_below="@+id/txtV_bottleHeader"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="X's And O's"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/btn_xsAndOs"
        android:layout_below="@+id/txtV_xAndOHeader"
        android:layout_centerHorizontal="true" />
</RelativeLayout>